# ==========================================================
# FRONTEND (Vite) — only VITE_* is exposed to the browser
# ==========================================================
VITE_API_BASE=https://teketeke.dev
VITE_APP_BASE=/

# Supabase (Frontend)
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# Frontend helpers
VITE_PHONE_HASH_SALT=local-dev-only
PAYMENT_EVENT_TYPES=payment_success,payment_received,payment_confirmed


# ==========================================================
# BACKEND FLAGS — control conditional validation / feature toggles
# ==========================================================
ENABLE_STK=true
ENABLE_B2C=true
REQUIRE_TELEMETRY=false


# ==========================================================
# BACKEND API (Server)
# ==========================================================
PORT=5001
ADMIN_TOKEN=
CORS_ORIGINS=https://teketeke-react.vercel.app, https://teketeke-react.vercel.app


# ==========================================================
# DARAJA / M-PESA — Environment
# ==========================================================
DARAJA_ENV=sandbox
MPESA_BASE_URL=https://sandbox.safaricom.co.ke


# ==========================================================
# DARAJA / M-PESA — OAuth (API access)
# ✅ RECOMMENDED: Use MPESA_CONSUMER_KEY/SECRET only
# ❌ DARAJA_CONSUMER_KEY/SECRET are duplicates (keep in sync if still used)
# ==========================================================
MPESA_CONSUMER_KEY=
MPESA_CONSUMER_SECRET=
DARAJA_CONSUMER_KEY=
DARAJA_CONSUMER_SECRET=


# ==========================================================
# STK PUSH (Customer → You)
# ==========================================================
DARAJA_SHORTCODE=
DARAJA_PASSKEY=
DARAJA_CALLBACK_URL=
DARAJA_WEBHOOK_SECRET=


# ==========================================================
# B2C (You → Customer)
# ==========================================================
MPESA_B2C_SHORTCODE=
MPESA_B2C_INITIATOR_NAME=
MPESA_B2C_SECURITY_CREDENTIAL=
MPESA_B2C_RESULT_URL=
MPESA_B2C_TIMEOUT_URL=


# ==========================================================
# SUPABASE (Backend)
# ==========================================================
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
SUPABASE_DB_URL=


# ==========================================================
# TELEMETRY / LOGGING
# ==========================================================
TELEMETRY_TOKEN=change-me
TELEMETRY_ENABLE_STORAGE=true
